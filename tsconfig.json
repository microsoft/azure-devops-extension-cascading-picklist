{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "rootDir": "src/",
    "outDir": "dist/",
    "lib": ["es7", "dom", "esnext"],
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["react-monaco-editor"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  }
}
